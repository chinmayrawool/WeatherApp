<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="Temperature Unit"
        android:defaultValue="Celcius"
        android:entries="@array/pref_temperature_list"
        android:entryValues="@array/pref_temperature_list"
        android:key="pref_temp_unit"
        android:summary="Choose between Celsius and Fahrenheit"
        android:dialogTitle="Choose Temperature Unit"/>

    <EditTextPreference
        android:selectAllOnFocus="true"
        android:title="Current City"
        android:key="pref_current_city"
        android:summary="Change Current City"
        android:singleLine="true"
        android:dialogTitle="Enter city details" />

    <EditTextPreference
        android:selectAllOnFocus="true"
        android:title="Current Country"
        android:key="pref_current_country"
        android:summary="Change Current Country"
        android:singleLine="true"
        android:dialogTitle="Enter country code" />

</PreferenceScreen>
